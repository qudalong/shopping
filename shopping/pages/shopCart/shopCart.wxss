.row-wrap {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  justify-content: flex-start;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

 .icon-circle {
  font-size: 80rpx;
  color: #CACACA;
}
.icon-duihao1{
  font-size: 48rpx;
  margin-left:18rpx;
  margin-right: 16rpx;
  color:#FE6E00; 
}

.produce-info {
  flex: 2;
  display: flex;
  align-items: center;
}

.produce-info .cover {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
}

.produce-info .info {
  flex: 1;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.produce-info .price {
  flex: 1;
  color: #ff7b7b;
}

.produce-info .type {
  font-size: 26rpx;
  color: #666;
}
.produce-info .type text{
 margin-right: 20rpx;
}

.bottom-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}




.edit,.result{
  width: 160rpx;
  background: #3C8EE5;
  text-align: center;
  height: 100%;
  color: #fff;
}
.result{
  background: #FF4544;
}
.total{
  flex: 1;
}
.result-wrap{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 0 0 20rpx;
}
.shop-list{
  margin-bottom: 110rpx;
}