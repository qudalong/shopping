.search {
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  margin: 30rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 1px 1px 3px #ccc;
  text-align: center;
  color: #666;
  overflow: hidden;
}

.inpt {
  flex: 1;
  padding:0 20rpx;
  text-align: left;
}
.icon-sousuo{
  font-size: 40rpx;
  margin-right: 5rpx;
  vertical-align: top;
  margin-bottom: 14rpx;
}
.search-btn {
  padding:0 20rpx;
   display: flex;
  align-items: center;
  background: #f0f0f0;
  border-radius: 0 10rpx 10rpx 0;
}

.shop-list {
  background: #fff;
}

.shop-list .item {
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #dedede;
}

.shop-list .item .cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info .name {
  color: #333;
  flex: 1;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  color: #666;
  line-height: 1.6;
}

.info .raking {
  display: flex;
  align-items: center;
}

.icon-shixin {
  font-size: 40rpx;
  color: #ff7070;
}

.shop-list .item .posit {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  color: #666;
}

.icon-daohang {
  margin-bottom: 6rpx;
  color: #ff7070;
}
