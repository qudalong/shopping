page {
  padding: 0;
}

.search {
  margin: 30rpx;
  height: 80rpx;
  line-height: 70rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 1px 1px 3px #ccc;
  text-align: center;
  color: #666;
}

.icon-sousuo {
  margin-right: 10rpx;
  color: #666;
}

.hostproduct {
  background-color: #fff;
  margin-bottom: 10rpx;
}

.hotsell {
  padding: 20rpx 30rpx;
  background-color: #ccc;
  color: #fff;
  display: inline-block;
  margin: 20rpx;
  border-radius: 30rpx;
}

.hotsell.active {
  background-color: #ff4544;
}

.goods {
  width: 49%;
  background-color: #fff;
  float: left;
  margin: 0.5%;
  border-radius: 6rpx;
  overflow: hidden;
}

.goods .info {
  padding: 10rpx 20rpx;
  line-height: 1.6;
}

.picture {
  width: 100%;
  height: 400rpx;
  background-color: skyblue;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.img {
  width: 100%;
  height: 100%;
}

.base {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.productprice {
  color: #d81e06;
}

.sold {
  color: #aaa;
}
