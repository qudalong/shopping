<!-- 购物车 -->
<icon class='iconfont icon-gouwuche1-copy shopCart'></icon>
<!-- 轮播图 -->
<swiper class='swiper' indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-active-color="#FE4442" indicator-color="#ccc">
  <block wx:for="{{imgUrls}}" wx:key="unique">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode='aspectFill' />
    </swiper-item>
  </block>
</swiper>
<!-- 商品名称价格销量 -->
<view class='namepricesales'>
  <view>
    <view>fan羽绒服</view>
    <view>
      <text class='first'>￥699</text>
      <text class='center'>￥780</text>
      <text>销量:200件</text>
    </view>
  </view>
  <view class='share'>
    <icon class='iconfont icon-fenxiang'></icon>
    <view>分享</view>
  </view>
</view>
<!-- 承诺部分 -->
<view class='promise'>
  <view>
    <icon class='iconfont icon-duihao'></icon>
    <text>品质保障</text>
  </view>
  <view class='second'>
    <icon class='iconfont icon-duihao'></icon>
    <text>极速发货</text>
  </view>
  <view>
    <icon class='iconfont icon-duihao'></icon>
    <text>7天退换货</text>
  </view>
</view>
<!-- 选择规格 -->
<view bindtap='selectType' class='choosespecifications'>
  <view class='choose'>
    <text>选择</text>
    <text class='specifications'>规格</text>
  </view>
  <icon class='iconfont icon-iconfontyoujiantou-copy-copy-copy-copy'></icon>
</view>
<!-- 商品详情 评价 -->
<view class='productdetailevaluation'>
  <view bindtap='changed' class="productdetail {{activeIndex==0 ? 'active' : '' }}" data-index="0">商品详情</view>
  <view bindtap='changed' class="evaluation {{activeIndex==1 ? 'active' : '' }}" data-index="1">评价</view>
</view>

<view class="commodity-details">
  <!-- 商品详情 -->
  <view wx:if="{{activeIndex==0}}">
    <view class='details'>
      <view>南极人羽绒服女中长款过膝貉子毛领加厚保暖2018冬季新款韩版时尚中长款简约休闲衣服女冬装潮牌 白色、 M 建115斤-135斤</view>
      <image src='/image/img/cover03.jpg' mode='aspectFit'></image>
    </view>
    <!-- 相关商品 -->
    <view class='related-products'>
      <view class='title-mid'>
        <view class='middle'>
          <icon class='iconfont icon-shoucang'></icon>
          <text class='lable'>相关商品</text>
        </view>
      </view>
      <block wx:if="{{list.length}}" wx:for="{{list}}" wx:key="unique">
        <view bindtap='toProduceDetail' class='goods'>
          <view class='picture'>
            <image src='/image/img/cover01.jpg' class='img' />
          </view>
          <view class='info'>
            <view class='productname'>毛领子</view>
            <view class='base'>
              <view class='productprice'>￥25{{index}}.00</view>
              <view class='sold'>已售200{{index}}件</view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
  <!-- 商品评价 -->
  <view wx:if="{{activeIndex==1}}" class="evaluation-details">
    <view class='all'>
      <text>全部</text>
      <text>(0)</text>
    </view>
    <view class='all'>
      <text>好评</text>
      <text>(0)</text>
    </view>
    <view class='all'>
      <text>中评</text>
      <text>(0)</text>
    </view>
    <view class='all'>
      <text>差评</text>
      <text>(0)</text>
    </view>
  </view>
</view>

<!-- 加入购物车 立即购买弹窗 -->
<view wx:if="{{producType}}" class='globle-cover'>
  <view class='joinbuy'>
    <view class='close'>
      <image src='{{producItem.img}}' class='small'></image>
      <view class='inventory'>
        <text class='first'>￥{{producItem.price}}</text>
        <text>库存{{producItem.inventory}}件</text>
      </view>
      <icon bindtap='closeProductType' class='iconfont icon-close'></icon>
    </view>
    <view class='colorsize'>
      <text>颜色</text>
      <view>
        <text wx:for="{{producItem.color}}" wx:key="unique" class="color {{activeIndex==index ? 'active' : ''}}" data-index="{{index}}">{{item}}</text>
      </view>
      <text>尺码</text>
      <view>
        <text wx:for="{{producItem.color}}" wx:key="unique" class="color {{activeIndex==index ? 'active' : ''}}" data-index="{{index}}">{{item}}</text>
      </view>
    </view>
    <view class='amount'>
      <text>数量</text>
      <view class='number'>
        <icon class='iconfont icon-jianhao1'></icon>
        <text class='numberof'>1</text>
        <icon class='iconfont icon-jiahao'></icon>
      </view>
    </view>
  </view>
</view>
<!-- 联系电话  客服 -->
<view>
  <icon class='iconfont icon-weibiaoti'></icon>
  <icon class='iconfont icon-kefu'></icon>
</view>
<!-- 底部导航栏 -->
<view class='bottomNavigation'>
  <view class='homepage'>
    <icon class='iconfont icon-home'></icon>首页
  </view>
  <view class='collect'>
    <icon class='iconfont icon-shoucang'></icon>收藏
  </view>
  <view bindtap='selectType' class='addcart'>加入购物车</view>
  <view bindtap='selectType' class='buynow'>立即购买</view>
</view>