page {
  padding: 0;
}

.search {
  margin: 30rpx;
  height: 80rpx;
  line-height: 70rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 1px 1px 3px #ccc;
  text-align: center;
  color: #666;
}

.icon-sousuo {
  margin-right: 10rpx;
  color: #666;
}

.swiper {
  height: 400rpx;
}

.swiper swiper-item, .swiper .slide-image {
  width: 100%;
  height: 100%;
}

.icon-nav {
  height: 100rpx;
  width: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  background: red;
  color: #fff;
  font-size: 80rpx;
  margin-bottom: 10rpx;
}

.classify-wrap {
  background: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 10rpx;
}

.classify-wrap .item {
  width: 25%;
  text-align: center;
  padding: 30rpx 0;
}

.title-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:20rpx 30rpx;
  background: #fff;
}
.border-b{
  border-bottom: 1px solid #dedede;
}

.title-wrap .left, .title-wrap .right {
  display: flex;
  align-items: center;
}

.title-wrap .lable {
  color: blue;
  margin-left: 20rpx;
}

.title-wrap .more {
  margin-right: 20rpx;
}
.scroll_box{
  width: 100%;
height: 307rpx;
overflow: hidden;
padding: 20rpx;
background: #fff;
white-space: nowrap;
}
.scroll-view-item{
 width:600rpx;
height: auto;
margin-right: 23rpx;
display: inline-block;
  background: red;
}